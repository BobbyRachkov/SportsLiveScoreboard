@using SportsLiveScoreboard.Models.BindingModels.Sport.Room
@model SportsLiveScoreboard.Models.BindingModels.Sport.Room.CreateTableTennisRoom

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span class="text-danger" asp-validation-for="Name"></span>
</div>
<div class="row">
    <div class="form-group col-5 offset-1">
        <label asp-for="MinGames">Games:</label>
        <div class="input-group" style="width: 110px; margin-bottom: 5px !important;">
            <div class="input-group-prepend">
                <button type="button" class="btn btn-info btn-minus">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
            <input asp-for="MinGames" class="form-control min-games">
            <div class="input-group-append">
                <button type="button" class="btn btn-info btn-plus">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>
        <span class="of-max-games"></span>
        <span class="text-danger" asp-validation-for="MinGames"></span>
    </div>
    <div class="form-group col-6">
        <div class="row">
            <label>Points per game:</label>
        </div>
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-outline-success active">
                <input type="radio" name="PointsPerGame" value="11" autocomplete="off" checked=""> 11
            </label>
            <label class="btn btn-outline-success">
                <input type="radio" name="PointsPerGame" value="21" autocomplete="off"> 21
            </label>
        </div>
        <span class="text-danger" asp-validation-for="PointsPerGame"></span>
    </div>
</div>
<input type="hidden" asp-for="EventId" />